<p id="notice"><%= notice %></p>

<h1>Muslimah</h1>

  <hr>

  <%= form_tag search_articles_path, method: 'get' do %>
    <%= label_tag  %>
    <%= text_field_tag :q, params[:q] %>
    <%= submit_tag :search %>
  <% end %>

  <hr>


<table class="table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Picture</th>
      <th>Published on</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.content %></td>

        <td><a data-toggle="modal" data-target="#img<%= article.id %>" href="<%= image_path(article.picture) %>" target="_blank"><img src="<%= image_path(article.picture) %>" alt="<%= article.picture %>" height="42" width="42"></a></td>
        <div class="modal fade" id="img<%= article.id %>"> 
          <center><div class="modal-body"></div><img src="<%= image_path(article.picture) %>" height="200" width="200"></center>
        </div>
        <td><%= article.published_on %></td>
        <td><%= link_to 'Show', article %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path %>  <%= link_to 'All Articles', articles_path if params[:q] %>
