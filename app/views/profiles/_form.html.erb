  <% end %>

  <div class="field">
     <%= f.label :picture %><br>
     <%= f.file_field :avatar, multiple: true %>
  </div>

  <div class="field">
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name %>
  </div>

                 <div class="field">
                   <%= f.label :gender %><br>
                    <input type="radio" id="q156" name="quality[25]" value="male" /> Male
                     <input type="radio" id="q157" name="quality[25]" value="female" /> Female
                 </label> 
                </div>   
   </ul>
   
  <div class="field">
    <%= f.label :birth_date %><br>
    <%= f.date_select :birth_date, start_year: 1900 %>
  </div>
  
  <div class="field">
    <%= f.label :country %><br>
    <%= country_select("profile", "country", priority_countries: ["US"]) %>

  </div>

  <div class="field">
    <%= f.submit %><br>
  </div>
<% end %>
